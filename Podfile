# platform :ios, '9.0'

target 'Scoreboard' do
  pod 'PusherSwift', '~>4.0'
  
  source 'https://github.com/CocoaPods/Specs.git'
  platform :ios, '8.0'
  
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  pod 'CryptoSwift'

  # Pods for Scoreboard
  target 'ScoreboardTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'PusherSwift', '~>4.0'
  end

  target 'ScoreboardUITests' do
    inherit! :search_paths
    # Pods for testing
    pod 'PusherSwift', '~>4.0'
  end

end
